# Application Configuration
NODE_ENV=development
PORT=3000

# NextAuth Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-here

# Azure AD OAuth Configuration
AZURE_AD_CLIENT_ID=your-client-id
AZURE_AD_CLIENT_SECRET=your-client-secret
AZURE_AD_TENANT_ID=your-tenant-id

# Database Configuration
DATABASE_URL=mysql://user:password@localhost:3306/{project_name}
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=password
MYSQL_DATABASE={project_name}

# Storage Configuration
STORAGE_PROVIDER=local
# For S3:
# STORAGE_PROVIDER=s3
# AWS_REGION=us-east-1
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_S3_BUCKET=your-bucket-name

# Email Configuration (Optional)
EMAIL_FROM=noreply@example.com
EMAIL_SERVER=smtp.example.com
EMAIL_PORT=587
EMAIL_USER=smtp-user
EMAIL_PASSWORD=smtp-password

# OpenAI Configuration (Optional)
OPENAI_API_KEY=your-openai-api-key

# =================================================================
# BASE PATH CONFIGURATION
# =================================================================

# For subdirectory deployments (e.g., domain.com/your-app)
# Leave empty for root deployments (e.g., domain.com)
# 
# Examples:
# ROOT DEPLOYMENT (most common):
# BASE_PATH=
# NEXT_PUBLIC_BASE_PATH=
#
# SUBDIRECTORY DEPLOYMENT (template example):
# BASE_PATH=/template
# NEXT_PUBLIC_BASE_PATH=/template
#
# ENTERPRISE DEPLOYMENT (custom path):
# BASE_PATH=/your-app
# NEXT_PUBLIC_BASE_PATH=/your-app
#
# Both variables must match for proper functionality
BASE_PATH=
NEXT_PUBLIC_BASE_PATH=